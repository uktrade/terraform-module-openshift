{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "route53:CreateHostedZone",
        "route53:ChangeResourceRecordSets",
        "route53domains:*"
      ],
      "Resource": [
        "arn:aws:route53:::hostedzone/${zone_id}"
      ]
    }
  ]
}
